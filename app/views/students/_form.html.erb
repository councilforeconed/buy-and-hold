<div class+"row">
  <div class="col-md-12">
  <% if @student.errors.any? %>
    <div id="errors">
      <h2><%= pluralize(@student.errors.count, "error") %> prohibited
        this word from being saved:</h2>
      <ul>
      <% @student.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <h2>First Time Students</h2>
    <%= form_for @student do |f| %>
      <%= f.label :name, 'First Name' %>:
      <%= f.text_field :name, class: 'form-control' %><br />

      <%= f.label :section_code, 'Section or Class Code (Optional)' %>:
      <%= f.text_field :section_code, class: 'form-control' %><br />
  
      <%= f.label :student_id, 'Student ID (Optional)' %>:
      <%= f.text_field :student_id, class: 'form-control' %><br />
  
      <%= f.label :teacher_email, 'Your Teacher\'s Email Address' %>:
      <%= f.text_field :teacher_email, class: 'form-control' %><br />

      <%= submit_tag 'Let\'s Begin!', class: 'btn btn-primary' %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h2>Returning Students</h2>
    <%= form_for @student do |f| %>
      <%= f.label :access_code, 'Access Code' %>:
      <%= f.text_field :access_code, class: 'form-control' %><br />

      <%= submit_tag 'Let\'s Continue!', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>