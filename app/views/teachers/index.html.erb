<div class="row">
  <div class="col-md-3 no-print">
    <%= link_to 'Research Stocks', stocks_path, :class => 'btn btn-primary btn-block' %>
    <%= link_to 'Edit Profile', edit_teacher_registration_path, :class => 'btn btn-default btn-block' %>
    <%= render "set_year" %>
  </div>
  <div class="col-md-9 print-main">
    <h2>Students</h2>
    <p class="no-print">Click on a table heading to resort the table.</p>
    <table class="table tablesorter students-table">
      <thead>
      <tr>
        <th>Student Name</th>
        <th>Access Code</th>
        <th>Section</th>
        <th>Student ID</th>
        <th>Total Portfolio</th>
        <th>Gain/Loss</th>
        <th>Submitted</th>
        <th class="no-print">Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @students.each do |student| %>
          <tr>
            <td><%= student.name %></td>
            <td><%= student.access_code %></td>
            <td><%= student.section_code %></td>
            <td><%= student.student_id %></td>
            <td><%= number_to_currency student.portfolio_value %></td>
            <td><%= number_to_currency student.capital_gains %></td>
            <td>
              <%= render partial: 'update_student_status', locals: { student: student } %>
            </td>
            <td class="no-print"><%= link_to 'Delete', "/teachers/student/#{student.id}", method: :delete %>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>